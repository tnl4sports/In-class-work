<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Retro Banana Snake</title>
<style>
  body {
    margin: 0;
    background: black;
    color: #00ff00;
    font-family: 'Courier New', monospace;
    text-align: center;
  }

  h1 {
    margin-top: 20px;
    font-size: 32px;
    text-shadow: 0 0 10px #00ff00;
  }

  canvas {
    background: #111;
    border: 4px solid #00ff00;
    display: block;
    margin: 20px auto;
    image-rendering: pixelated;
  }
</style>
</head>
<body>
<h1>RETRO BANANA SNAKE</h1>
<canvas id="game" width="400" height="400"></canvas>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");

let grid = 20;
let snake = [{ x: 160, y: 200 }];
let dx = grid;
let dy = 0;
let fruit = spawnFruit();
let bananaImg = new Image();
bananaImg.src = "https://i.imgur.com/1XQZ1.png"; // pixel banana

let lastTime = 0;
let speed = 100;

document.addEventListener("keydown", (e) => {
  if (e.key === "ArrowUp" && dy === 0) { dy = -grid; dx = 0; }
  if (e.key === "ArrowDown" && dy === 0) { dy = grid; dx = 0; }
  if (e.key === "ArrowLeft" && dx === 0) { dx = -grid; dy = 0; }
  if (e.key === "ArrowRight" && dx === 0) { dx = grid; dy = 0; }
});

function spawnFruit() {
  return {
    x: Math.floor(Math.random() * 20) * grid,
    y: Math.floor(Math.random() * 20) * grid
  };
}

function gameLoop(timestamp) {
  if (timestamp - lastTime > speed) {
    lastTime = timestamp;
    update();
    draw();
  }
  requestAnimationFrame(gameLoop);
}

function update() {
  let head = { x: snake[0].x + dx, y: snake[0].y + dy };

  if (head.x < 0 || head.x >= 400 || head.y < 0 || head.y >= 400) {
    reset();
    return;
  }

  for (let i = 0; i < snake.length; i++) {
    if (snake[i].x === head.x && snake[i].y === head.y) {
      reset();
      return;
    }
  }

  snake.unshift(head);

  if (head.x === fruit.x && head.y === fruit.y) {
    fruit = spawnFruit();
  } else {
    snake.pop();
  }
}

function draw() {
  ctx.fillStyle = "black";
  ctx.fillRect(0, 0, 400, 400);

  ctx.fillStyle = "#0f0";
  for (let s of snake) {
    ctx.drawImage(bananaImg, s.x, s.y, grid, grid);
  }

  ctx.fillStyle = "red";
  ctx.fillRect(fruit.x, fruit.y, grid, grid);
}

function reset() {
  snake = [{ x: 160, y: 200 }];
  dx = grid;
  dy = 0;
  fruit = spawnFruit();
}

bananaImg.onload = () => requestAnimationFrame(gameLoop);
</script>
</body>
</html>

